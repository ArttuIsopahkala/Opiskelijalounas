<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar" >
        <item name="android:textViewStyle">@style/myTextView</item>
        <item name="android:buttonStyle">@style/CustomButton</item>
        <item name="android:radioButtonStyle">@style/CustomRadioButton</item>
        <item name="editTextStyle">@style/myEditTextStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <item name="android:spinnerItemStyle">@style/mySpinnerText</item>
    </style>

    <style name="myTextView" parent="@android:style/TextAppearance">
        <item name="colorControlNormal">@color/color_text_light</item>
        <item name="android:textColor">@color/color_text_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/color_text_light</item>
        <item name="android:background">@color/color_dark</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:padding">8dp</item>
    </style>
    <style name="mySpinnerText" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/color_text_light</item>
    </style>

    <style name="CustomRadioButton" parent="@android:style/Widget.Holo.CompoundButton.RadioButton">
        <item name="android:textColor">@color/color_text_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LoadingDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">@color/color_restaurant</item>
        <item name="android:textColor">@color/color_text_light</item>
    </style>

    <style name="myEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/color_text_light</item>
        <item name="android:textColorHint">@color/color_text_hint</item>
        <item name="colorControlNormal">@color/color_text_light</item>
        <item name="colorControlActivated">@color/color_text_light</item>
        <item name="backgroundTint">@color/color_text_light</item>
    </style>

    <style name="CustomButton" parent="android:Widget.Holo.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_text_light</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:minWidth">100dp</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/color_colored</item>
    </style>
</resources>
