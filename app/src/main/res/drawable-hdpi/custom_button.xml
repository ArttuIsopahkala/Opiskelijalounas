<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:bottom="2dp">
        <layer-list>
            <item android:top="1dp">
                <shape>
                    <solid android:color="@color/color_button" />
                </shape>
            </item>
            <item android:bottom="1dp">
                <shape>
                    <solid android:color="@color/color_shadow" />
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:top="1dp">
                <shape>
                    <solid android:color="@color/color_button" />
                </shape>
            </item>
            <item android:bottom="1dp">
                <shape>
                    <solid android:color="@color/color_shadow" />
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>